<Page x:Class="ProjectForYp2.pages.PageReg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectForYp2.pages"
      mc:Ignorable="d" 
      d:MinHeight="450" d:MinWidth="800"
      d:Height="800" d:Width="1600"
      Title="PageReg">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <TextBlock 
                Text="Логин"
                FontSize="23pt"/>
            <TextBox 
                Height="40"
                FontSize="21pt"
                Margin="0 10 0 10"
                VerticalContentAlignment="Center"
                x:Name="log"
                Width="300"/>
            <TextBlock 
                Text="Пароль"
                FontSize="21pt"/>
            <PasswordBox 
                Height="40"
                FontSize="23pt"
                Margin="0 10 0 10"
                x:Name="pass1"
                VerticalContentAlignment="Center"
                Width="300"/>
            <TextBlock 
                Text="Повторить Пароль"
                FontSize="23pt"/>
            <PasswordBox 
                Height="40"
                FontSize="21pt"
                x:Name="pass2"
                Margin="0 10 0 10"
                VerticalContentAlignment="Center"
                Width="300"/>
        </StackPanel>
        <DockPanel Grid.Row="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Width="310">
            <Button
                    Height="40" Width="150" Content="Зарегистрировать" FontSize="16pt" x:Name="reg" Click="reg_Click"/>
            <Button
                    Content="Отмена" FontSize="16pt" x:Name="cancel" Click="cancel_Click"
                    Height="40" Width="150" HorizontalAlignment="Right"/>
        </DockPanel>
    </Grid>
</Page>
