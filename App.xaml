<Application x:Class="ProjectForYp2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ProjectForYp2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Grid" >
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style TargetType="Grid" x:Key="GridSecond">
            <Setter Property="Background" Value="#FFFFE1"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF9C1A"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="Blocks">
            <Setter Property="Background" Value="#FFFFE1"/>
        </Style>
    </Application.Resources>
</Application>
